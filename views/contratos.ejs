<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contratos de Automóviles</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .container {
            margin-top: 50px;
        }
        .table th {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
        }
        .table tbody tr:hover {
            background-color: #e9ecef;
        }
        .table td {
            vertical-align: middle;
            text-align: center;
        }
        .cost-highlight {
            font-weight: bold;
            color: #28a745;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Contratos de Automóviles</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Automóvil</th>
                            <th>Modelo</th>
                            <th>Precio</th>
                            <th>Características</th>
                            <th>Costo Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contratos.forEach(contrato => { %>
                            <tr>
                                <td><%= contrato.cliente.nombre %></td>
                                <td><%= contrato.automovil.nombre %></td>
                                <td><%= contrato.automovil.modelo.nombre %></td>
                                <td>$<%= contrato.automovil.precio.toFixed(2) %></td>
                                <td>
                                    <ul class="list-unstyled mb-0">
                                        <% contrato.automovil.caracteristicas.forEach(caracteristica => { %>
                                            <li><%= caracteristica.descripcion %> - $<%= caracteristica.costo.toFixed(2) %></li>
                                        <% }) %>
                                    </ul>
                                </td>
                                <td class="cost-highlight">$<%= contrato.costoTotal.toFixed(2) %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
